<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a11005" />
            <stroke
                android:width="1dp"
                android:color="#d62608" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="15dp"
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ff7f7f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="15dp"
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
